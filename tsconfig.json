{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "lib": [
      "dom",
      "ES2017",
      "ES2020",
      "dom.iterable"
    ],
    "declaration": true,
    "outDir": "lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tracking",
  ]
}